#logo
  position relative
  display inline-block
  width 5rem
  height 5rem
  color font-color
  text-indent -999rem
  transition all .5s

  &::after
     content ""
     position absolute
     left 0
     top 0
     width 100%
     height 100%
     border 1px solid
     border-radius 50%

  &::before
    content "W"
    position absolute
    left .6rem
    top .5rem
    width 4rem
    height 5rem
    line-height 5rem
    font-size 3.5rem
    text-indent 0
    text-align center

  &:hover
    transform rotateY(180deg)

    &::before
      color bg-color
      z-index 1

    &::after
      background-color font-color
