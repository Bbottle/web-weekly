.archives
  position absolute
  left 0
  top 0
  right 0
  bottom 0
  padding 5rem
  margin 0
  background-color rgba( 10, 10, 10, .8 )
  overflow auto
  opacity 0
  z-index -1
  transition all .5s
  transform scale(0)

  li
    float left
    width 50%
    height 20rem
    line-height 20rem
    font-size 4rem
    font-weight bold
    text-align center
    list-style-type none

    a
      display block
      color #fff
      text-decoration none
      transition all .5s

      &:hover
        background-color #00b4ff

.archives-shown
  height 100%
  overflow hidden

  .archives
    opacity 1
    z-index 1
    transform scale(1)

@media ( min-width: 1000px )
  .archives li
    width 33%
    height 15rem
    line-height 15rem
