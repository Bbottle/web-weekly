#overlay
  display flex
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color #1d5a45
  transition all 1.5s

  .loading
    position relative
    width 15rem
    height 15rem
    margin auto
    border 3px solid transparent
    border-top-color #3498db
    border-radius 50%
    animation spin 2s linear infinite

    &::before, &::after
      content ""
      position absolute
      border 3px solid transparent
      border-radius 50%

    &::before
      left 1rem
      top 1rem
      width 13rem
      height 13rem
      border-top-color #e74c3c
      animation spin 1.5s linear infinite

    &::after
      top 2rem
      left 2rem
      width 11rem
      height 11rem
      border-top-color #f9c922
      animation spin 3s linear infinite

.loaded
  &, body
    height auto
    overflow auto

  #overlay
    opacity 0
    pointer-events none

    .loading
      animation none

@keyframes spin
  0%
    transform rotate( 0deg )

  100%
    transform rotate( 360deg )
